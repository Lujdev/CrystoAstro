---
import { Image } from 'astro:assets';
import logoImg from '../../assets/logo.png';
import { ThemeToggle } from "./ThemeToggle";
---

<nav
  class="w-full border-b border-border dark:border-border-dark bg-card/80 backdrop-blur-md sticky top-0 z-40"
>
  <div class="w-full px-6 sm:px-8 lg:px-12">
    <div class="flex justify-between h-16 items-center">
      <div class="flex-shrink-0 flex items-center">
        <a href="/" class="flex items-center gap-3 group">
          <div
            class="relative group-hover:scale-105 transition-transform duration-300"
          >
            <div
              class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full blur opacity-25 group-hover:opacity-50 transition duration-300"
            >
            </div>
            <Image
              src={logoImg}
              alt="CrystoDolar Logo"
              width={160}
              height={40}
              loading="eager"
              format="webp"
              class="h-10 w-auto relative"
            />
          </div>
          <span
            class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white"
          >
            CrystoDolar
          </span>
        </a>
      </div>
      <div class="flex items-center space-x-6 text-sm font-medium">
        <a
          href="/"
          class="text-slate-900 dark:text-white hover:text-primary transition-colors"
          >Inicio</a
        >
        <a
          href="/historico"
          class="text-secondary-text-light dark:text-slate-400 hover:text-primary dark:hover:text-primary transition-colors"
          >Hist√≥rico</a
        >
        <ThemeToggle client:idle />
      </div>
    </div>
  </div>
</nav>
